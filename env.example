# Main domain
MAIN_DOMAIN=yourdomain.com

# Timezone
TZ=Europe/Madrid

# Cloudflare Tunnel
CLOUDFLARE_TUNNEL_TOKEN=your_cloudflare_tunnel_token_here

# Cloudflare API (for ACME DNS challenge)
CF_API_EMAIL=your_cloudflare_email@example.com
CF_API_KEY=your_cloudflare_api_key_here
CF_DNS_API_TOKEN=your_cloudflare_dns_api_token_here

# ACME Email for Let's Encrypt certificates
ACME_EMAIL=your_email@example.com

# Traefik Configuration
TRAEFIK_LOG_LEVEL=INFO
TRAEFIK_HTTP_PORT=80
TRAEFIK_HTTPS_PORT=443
TRAEFIK_DASHBOARD_ENABLED=true
TRAEFIK_API_INSECURE=false

# Traefik Basic Auth (generate with: htpasswd -nb admin password)
# Format: user:hashed_password (multiple users separated by commas)
TRAEFIK_BASIC_AUTH=admin:$$apr1$$hashed_password_here

# AdGuard Home Configuration
ADGUARD_DNS_IP=192.168.0.100
ADGUARD_DNS_PORT=53
ADGUARD_HTTP_PORT=8050
ADGUARD_HTTPS_PORT=4430
ADGUARD_ADMIN_PORT=3000
ADGUARD_DOT_PORT=853
ADGUARD_DOH_PORT=784
ADGUARD_QUIC_PORT=8853
ADGUARD_TLS_PORT=5443
ADGUARD_DHCP_SERVER_PORT=67
ADGUARD_DHCP_CLIENT_PORT=68

# Storage Services (PostgreSQL y Redis compartidos)
# PostgreSQL - Generate with: openssl rand -base64 36
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_postgresql_password_here
POSTGRES_DB=shared
# Cada servicio puede usar su propia base de datos (Authentik la creará automáticamente)
# O pueden compartir POSTGRES_DB usando diferentes esquemas

# Redis - Generate with: openssl rand -base64 36
REDIS_PASSWORD=your_redis_password_here

# Authentik Configuration
# Generate with: openssl rand -base64 60
AUTHENTIK_SECRET_KEY=your_authentik_secret_key_here
# Base de datos específica para Authentik (debe estar en POSTGRES_DATABASES)
AUTHENTIK_PG_DB=authentik
# Optional: Email configuration (for password resets, etc.)
AUTHENTIK_EMAIL__HOST=smtp.example.com
AUTHENTIK_EMAIL__FROM=authentik@example.com
AUTHENTIK_EMAIL__USERNAME=smtp_username
AUTHENTIK_EMAIL__PASSWORD=smtp_password
AUTHENTIK_EMAIL__USE_TLS=true
AUTHENTIK_EMAIL__USE_SSL=false
AUTHENTIK_EMAIL__PORT=587
